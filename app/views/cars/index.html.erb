<!-- Mes cartes -->
<h1 class="text-center title-index-padding">Trouvez votre <strong id="title-index">Aventure</strong> et une <strong id="title-index">VOITURE</strong> confortable</h1>

<div class="container-fluid">

<!-- Mes cartes -->
 <div class="container">
               <% @cars.each do |car| %>
                  <%= link_to car_path(car), target: "_blank" do %>


                <div class="card ">
                  <div class="card__header">
                    <img src="<%= car.photo %>" alt="card__image" class="card__image" width="600">
                  </div>

                  <div class="card__body">
                    <span class="tag tag-red">Automobile</span>
                    <h4><%= car.title %></h4>
                    <p><%= car.content %></p>
                  </div>

                  <div class="card__footer">
                    <div class="user">
                      <img src="https://i.pravatar.cc/40?img=3" alt="user__image" class="user__image">
                      <div class="user__info">
                        <h5>John Doe</h5>
                        <small>2d ago</small>
                      </div>
                    </div>
                  </div>
                </div>

                <% end %>
               <% end %>
          </div>

<% content_for(:after_js) do %>
  <%= javascript_tag do %>
    $(document).ready(function() {
      var handler = Gmaps.build('Google');
      handler.buildMap({
        provider: {
          scrollwheel: false,
          zoomControl: false
        },
        internal: { id: 'cars-map' } }, function() {
        markers = handler.addMarkers(<%= raw @hash.to_json %>);
        handler.bounds.extendWith(markers);
        handler.fitMapToBounds();
        if (markers.length == 0) {
          handler.getMap().setZoom(2);
        } else if (markers.length == 1) {
          handler.getMap().setZoom(14);
        }
      });
    });

  <% end %>
<% end %>
