<!-- Mes cartes -->
<h1 class="text-center title-index-padding">Trouvez votre <strong id="title-index">Aventure</strong> et une <strong id="title-index">VOITURE</strong> confortable</h1>

<div class="container-fluid">

<!-- Mes cartes -->
 <div class="container">
               <% @cars.each do |car| %>
                  <%= link_to car_path(car), target: "_blank" do %>


                <div class="card ">
                  <div class="card__header">
                  <% unless car.photocar.attached? %>
                    <img src="<%= car.photocar %>" alt="card__image" class="card__image" width="600">
                    <% else %>
                    <%= cl_image_tag car.photocar.key, height: 300, width: 400, crop: :fill %>
                  <% end %>
                  </div>

                  <div class="card__body">
                    <span class="tag tag-red">Automobile</span>
                    <h4><%= car.title %></h4>
                    <p><%= car.content %></p>
                  </div>

                  <div class="card__footer">
                    <div class="user">
                      <img src="https://i.pravatar.cc/40?img=3" alt="user__image" class="user__image">
                      <div class="user__info">
                        <h5>John Doe</h5>
                        <small>2d ago</small>
                      </div>
                    </div>
                  </div>
                </div>

                <% end %>
               <% end %>
          </div>

  <div class="col-sm-5">
    <div class="cars-map-wrapper">
      <div id="cars-map" style="width: 100%; height: 400px;"></div>
    </div>
  </div>
</div>
